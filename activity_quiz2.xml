<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#90EE90"
    android:layout_height="match_parent">

    <TextView
        android:text="0"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:id="@+id/score2" />

    <TextView
        android:text="WHAT IS UR NAME?"
        android:textSize="19dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="52dp"
        android:id="@+id/question2"
        android:layout_alignEnd="@+id/score2" />

    <Button
        android:text="Button"
                android:background= "#2E8B57"

    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choice14"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/choice13"
        android:layout_marginBottom="13dp"
        android:layout_alignEnd="@+id/choice13"
        android:onClick="onClick" />

    <Button
        android:text="Button"
        android:background= "#2E8B57"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/choice12"
        android:layout_below="@+id/choice11"
        android:layout_alignStart="@+id/choice11"
        android:layout_alignEnd="@+id/choice11"
        android:onClick="onClick" />

    <TextView
        android:text="SCORE"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="46dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:background= "#2E8B57"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choice11"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/question2"
        android:layout_toStartOf="@+id/score2" />

    <Button
        android:text="Button"
        android:background= "#2E8B57"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choice13"
        android:layout_marginBottom="22dp"
        android:onClick="onClick"
        android:layout_above="@+id/choice14"
        android:layout_alignStart="@+id/choice12"
        android:layout_alignEnd="@+id/choice12" />
</RelativeLayout>
